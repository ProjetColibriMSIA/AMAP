{%extends '::base.html.twig' %}
{% block contenu %}
    <div class="container">
		
		<section>
			{% if news is defined %}
				<h1 class="actu">Les Actualites</h1>
				<br/>
				<ul class="lesactus">
					{% for n in news %}				
						{% if n.getisAfficher == 1 %}
							<li class='uneactu actu{{ n.getId }}'> 
								<a href="actualites?id={{ n.getId }}">
									<h6>{{ n.getName }}</h6>
									<p>
										{% if not n.getDateFin is null %} 
											Du {{ n.getDateDebut|date("l j F Y", "Europe/Paris") }} au {{ n.getDateFin|date("l j F Y", "Europe/Paris")}}
											{% else %} 
												Le {{ n.getDateDebut|date("l j F Y", "Europe/Paris") }}	
										{% endif %}	
										
									</p>
								</a>
							</li>
						{% endif %}
					{% endfor %}	
				</ul>
			{% else %}	
				<h6>{{ new.getName }}</h6>
				<p>
					{% if not new.getDateFin is null %} 
						Du {{ new.getDateDebut|date("l j F Y", "Europe/Paris") }} au {{ new.getDateFin|date("l j F Y", "Europe/Paris")}}
						{% else %} 
							Le {{ new.getDateDebut|date("l j F Y", "Europe/Paris") }}	
					{% endif %}	
					
				</p>
				<p>{{ new.getDescription }}</p>
				<input type="button" value="Retour" onclick="history.go(-1)">
			{% endif %}
		</section>
	</div>
{% endblock %}