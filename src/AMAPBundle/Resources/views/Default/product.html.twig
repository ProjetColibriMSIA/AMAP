{%extends '::base.html.twig' %}
{% block contenu %}
      {% if products is defined %}
           <div class="row" >
            <section class="col-lg-12 col-md-12 col-sm-12 col-xs-12">  
                <h2 class="titleBlock"><strong>Produits</strong></h2>
            </section>
        </div>
          <div class="row marginTop marginBottom">
            <section class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                  <table id="DataTableShow" class="table table-striped table-bordered display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Description</th>
                        </tr>
                    </thead>	
                    <tbody>
                        {% for product in products %}

                            <tr href="{{path('amap_default_products')}}/{{ product.getId }}">
                                <td> {{ product.getName }}</td>
                                <td> {{ product.getPrice }} €</td>
                                <td> {{ product.getDescription|raw }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </section>
          </div>
        {% else %}
            <div class="row" >
            <section class="col-lg-12 col-md-12 col-sm-12 col-xs-12">  
                <h2 class="titleBlock"><strong>Producteur : </strong>"<em>{{ product.getName }}</em>"  </h2>
            </section>
        </div>
         <div class="row marginTop" >
             {% if product.getrepIMG() !='' %}
                <section class="col-lg-7 col-md-7 col-sm-7 col-xs-12 lesactus">
                {% else %}
                <section class="col-lg-12 col-md-12 col-sm-12 col-xs-12 lesactus"> 
                {% endif %}
                <p><strong>Prix : </strong>{{ product.getPrice }} €</p>
                <p><strong>Description du Produit : </strong>{{ product.getDescription|raw }}</p>
             </section>
             
              {% if product.getrepIMG() !='' %}    
                    <section class="col-lg-5 col-md-5 col-sm-offset-0 col-sm-5 col-xs-offset-2 col-xs-8">
                        <div class='imgWidth'> 
                            <img src='/AMAP/web/./images/product/{{product.getrepIMG()}}' alt="{{product.getName()}}"/>
                        </div>
                    </section>
                {% endif %}
        </div>
                <div class="row marginBottom" >
            <section class="col-lg-12 col-md-12 col-sm-12 col-xs-12">  
                <button class="buttonReturn" onclick="history.go(-1)"><i class="fa fa-reply"></i><span> Retour</span></button>
            </section>
        </div>  
        {% endif %}
{% endblock %}

