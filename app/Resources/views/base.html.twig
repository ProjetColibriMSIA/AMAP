<!DOCTYPE html>
<html>
    <!-- Block head-->
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="initial-scale=1.0, maximum-scale=2.0">
        {% set titletab=((path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params'))|split('/'))|last) %}
        <title>
            {% block title %}AMAP - {{titletab|upper}}{% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('images/logo/web_amap.ico') }}" />

            <!-- Especially well keep order : reset -> datatable -> bootstrap -> font-awesome -> style -->
            <link rel="stylesheet" href="{{ asset('css/reset.css')}}" type="text/css" media="screen">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery.dataTables.min.css')}}">
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css')}}" media="screen" >
            <link rel="stylesheet" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.css')}}" type="text/css" media="screen">

            <link rel="stylesheet" href="{{ asset('css/style.css')}}" type="text/css" media="screen">


            <link href='http://fonts.googleapis.com/css?family=Adamina' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>
    <!-- End of Block Head -->
    <!-- Block body --> 
    <body>
        <!-- Block for the page background image : carousel -->
        <div class="carousel slide carousel-fade" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                </div>
                <div class="item">
                </div>
                <div class="item">
                </div>
            </div>
        </div>
        <!-- End block carousel -->
        <!-- Modal connection -->
        <div class="modal fade " id="ModalConnect" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content popup_block">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="login">
                            <h1>Connexion</h1>
                            <!-- le action est provision en attendant la gestion utilisateur-->
                            {% trans_default_domain 'FOSUserBundle' %}
                            <form method="post" action="{{ path("fos_user_security_check") }}">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                                <p><input type="text" name="_username" id="username" value="" placeholder="{{ 'security.login.username'|trans }}" required="required"></p>
                                <p><input type="password" name="_password" id="password" value="" placeholder="{{ 'security.login.password'|trans }}" required="required"></p>
                                <p class="remember_me">
                                    <label>
                                        <input type="checkbox" name="remember_me" id="remember_me">
                                        Se souvenir de moi
                                    </label>
                                </p>
                                <p class="submit"><input type="submit" name="commit" value="Connexion"></p>
                            </form>
                        </div>
                        <div class="login-help">
                            <p>Mot de passe oubli√©? <a href="index.html">Cliquez ici pour le renouveller</a>.</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of Block Modal connection -->
        <!-- Block Header in Body : logo, menu-->
        <header>
            {% block header %}
                <div class="line_header">
                    <!-- Button Connection -->
                    <div id="Auth" class="Connect">
                        <a href="" data-toggle="modal" data-target="#ModalConnect"><img src="{{ asset('./images/nav/co.png')}}" alt="connect" height="46.6" width="150"></a>
                    </div>
                    <!-- End of div for button connect -->

                    <!-- Use container in Header for use Bootstrap grid to adjust the menu in function of the device size -->
                    <div class="container">
                        <!-- Row is the element use in the grid, here we need just 1 row and 12 columns-->
                        <div class="row">
                            <!-- Section logo, explain class: lg :>1200px ; md :>992px ; sm :>768px ; xs :<768px -->
                            <section class="col-lg-5 col-md-4 col-sm-12 col-xs-12 ">

                                <a href="accueil">
                                    <div class="logo">
                                        <img src="{{ asset('./images/logo/logo.png')}}" >
                                    </div>
                                </a>
                            </section>
                            <!-- End of section logo -->

                            <!-- Block nav -->
                            <nav class="navbar navbar-default marginMenu col-lg-7 col-md-8 col-sm-12 col-xs-12 ">

                                <!-- Brand and toggle get grouped for better mobile display -->
                                <div class="navbar-default navbar-header smallMenu" style="cursor:pointer;"  data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <a class="navbar-brand">Menu</a>
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                                <!-- End of first div : better mobile display-->

                                <!-- In this block there is the 2 menu possible-->
                                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                    {{ knp_menu_render('AMAPBundle:Builder:mainMenu') }}


                                    {% block navigation %}
                                        {% include 'component/menu.html.twig' %}
                                    {% endblock %}

                                </div>
                                <!-- /.navbar-collapse -->
                            </nav>

                            <!-- End of block navigation --> 
                        </div>
                        <!-- End of block row -->
                    </div>
                    <!-- End of block Container -->
                </div>
            {% endblock %}
        </header>       
        <!-- End of block Header of Body -->
        <div class="container marginContainer">
            <div class="row">
                <section id="content">
                    <!--==============================content================================-->
                {% block contenu %}
                {% endblock %} 
                <!--==============================footer=================================-->
               
        
            </section>
         </div>
    </div>
    {% block javascripts %}
        <script type="text/javascript" language="javascript" src="{{ asset('//code.jquery.com/jquery-1.12.3.min.js')}}">
        </script>

        <script type="text/javascript" language="javascript" src="{{ asset('js/jquery.dataTables.js')}}"></script>

        <!-- permet de gerer les diapo interne-->
        <script src="{{ asset('js/tms-0.3.js')}}" type="text/javascript"></script>
        <script src="{{ asset('js/tms_presets.js')}}" type="text/javascript"></script>
        <script src="{{ asset('bootstrap/js/bootstrap.js')}}" type="text/javascript"></script>
        <script src="{{ asset('js/script.js')}}" type="text/javascript"></script>
    {% endblock %}

</body>
{% block footer %}
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-text">Design by <strong><span>Isma Team</span></strong></div>
                <div class="col-md-4 col-md-offset-4">
                    <ul class="list-services">
                        <li>Link to Us:</li>
                        <li><a class="tooltips" href="#"></a></li>
                        <li class="item-1"><a class="tooltips" href="#"></a></li>
                        <li class="item-2"><a class="tooltips" href="#"></a></li>
                    </ul>
                </div>  
            </div>
        </div>
    </footer>
{% endblock %}
</html>
